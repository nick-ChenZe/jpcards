{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext", // 明确指定目标ES版本
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "lib": ["esnext"] // 确保 "lib" 在 "compilerOptions" 内
    },
    "ts-node": {
        "esm": true
    }
}
